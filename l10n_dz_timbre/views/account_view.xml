<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

     <record id="view_payment_term_form" model="ir.ui.view">
            <field name="name">account.payment.term.form</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
           	    <field name="name" position="after">
                	<field name="payment_type"/>
                </field>
            </field>
    </record>

     <record id="view_account_payment_invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.invoice.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
            <field name="arch" type="xml">
                <field name="communication" position="after">
                    <field name="hide_rib_number" invisible="1"/>
                    <field name="rib_number" string="RIB" attrs="{'invisible': [('hide_rib_number','=', True)]}" />  
                    <label for="id" string="N° de Vir"/>
                       <div name="rib" class="o_row">
                            <field name="cheque_number" class="o_address_state" attrs="{'invisible': [('hide_rib_number','=', True)]}"/>
                            <field name="bank_acc" class="o_address_state" attrs="{'invisible': [('hide_rib_number','=', True)]}"/>
                        </div>
                </field>
            </field>
    </record>


     <record id="view_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">view.account.payment.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="communication" position="after">
                    <field name="hide_rib_number" invisible="1"/>
                    <field name="cheque_number" attrs="{'readonly': 1,'invisible': [('hide_rib_number','=', True)]}"/>
                    <field name="bank_acc" attrs="{'readonly': 1,'invisible': [('hide_rib_number','=', True)]}" options="{'no_open': True}"/>
                </field>
            </field>
    </record>

        <menuitem action="account.action_account_payments" id="account.menu_action_account_payments_receivable" parent="account.menu_finance_receivables" sequence="20" groups="account.group_account_user,account.group_account_invoice"/>

        <menuitem action="account.action_account_payments_payable" id="account.menu_action_account_payments_payable" parent="account.menu_finance_payables" sequence="20" groups="account.group_account_user,account.group_account_invoice"/>






        <record id="dz_timb_view_account_payment_from_invoices" model="ir.ui.view">
            <field name="name">dz_timb.account.register.payments.wizard</field>
            <field name="model">account.register.payments</field>
            <field name="inherit_id" ref="account.view_account_payment_from_invoices"/>
            <field name="arch" type="xml">
              <xpath expr="//form" position="replace">
                <form string="Register Payment" version="7">
                    <field name="payment_type" invisible="1"/>
                    <field name="partner_type" invisible="1"/>
                    <field name="partner_id" invisible="1"/>
                    <group>
                        <group>
                            <field name="journal_id" widget="selection"/>
                            <field name="hide_payment_method" invisible="1"/>
                            <field name="payment_method_id" widget="radio" attrs="{'invisible': [('hide_payment_method', '=', True)]}"/>
                            <field name="payment_method_code" invisible="1"/>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="payment_date"/>
                            <field name="communication"/>
                            <field name="rib_number" />
                            <label for="id" string="N° de Vir"/>
                                <div name="rib" class="o_row">
                                    <field name="cheque_number" class="o_address_state" />
                                    <field name="bank_acc" class="o_address_state" />
                                </div>
                        </group>
                    </group>
                    <footer>
                        <button string='Validate' name="create_payment" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
              </xpath>
            </field>
        </record>


    </data>
</odoo>
