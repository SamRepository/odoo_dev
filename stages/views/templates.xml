                <div class="oe_structure">
                    <div class="container">
                        <t t-foreach="stages" t-as="stage">
                            <p>
                                <a t-attf-href="/stages/{{ slug(stage) }}">
                                    <t t-esc="stage.name"/>
                                </a>
                            </p>
                        </t>
                    </div>
                </div>
            </t>
        </template>
        <!-- display stages details template -->
        <template id="stages_details_display">
            <t t-call="website.layout">
                <title>Détails de stage</title>
                <div class="oe_structure"/>
                <div class="oe_structure">
                    <div class="container">
                        <h3 t-field="stage.name"/>
                        <p>
                            <b>Grades Concernés:</b>
                        </p>
                        <ul class="list-group">
                            <t t-foreach="stage.grades_ids" t-as="grades">
                                <li class="list-group-item">
                                    <p t-field="grades.name"/>
                                </li>
                            </t>
                        </ul>
                        <div style="height: 10px;"></div>
                        <p>
                            <b>Conditions Stage:</b>
                        </p>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <p t-field="stage.conditions"/>
                            </li>
                        </ul>

