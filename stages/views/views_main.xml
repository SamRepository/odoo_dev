<odoo>
    <!--inherint view base.view_country_group_form-->
    <record id="stages.country_group_from" model="ir.ui.view">
        <field name="name">stages.country_group.from</field>
        <field name="model">res.country.group</field>
        <field name="inherit_id" ref="base.view_country_group_form"/>
        <field name="arch" type="xml">
            <field name="pricelist_ids" position="attributes">
                <attribute name="invisible">True</attribute>
            </field>
        </field>
    </record>

    <!-- searche view for Wilayas-->
    <record id="stages.view_country_state_search" model="ir.ui.view">
        <field name="name">stages.view_country.state.search</field>
        <field name="model">res.country.state</field>
        <field name="arch" type="xml">
            <search string="Wilayas et États Fédéraux">
                <field name="name"/>
                <field name="code"/>
                <field name="country_id"/>
                <separator/>
                <filter string="Algérie" name="algerie" domain="[('country_id', '=', 'Algérie')]"/>
                <group expand="0" string="Group By">
                    <filter string="Pays" name="pays" context="{'group_by':'country_id'}"/>
                </group>
            </search>
        </field>
    </record>

