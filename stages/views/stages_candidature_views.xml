<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--From view for the stages.candidatures-->
    <record id="stages_candidature_perfectionnement_view_form" model="ir.ui.view">
        <field name="name">stages_candidature_perfectionnement</field>
        <field name="model">stages.candidature.perfectionnement</field>
        <field name="arch" type="xml">
            <form string="Stages Perfectionnement - تربص تحسين المستوى بالخارج">
                <header>
                    <button name="action_confirm" string="Confirmer" class="oe_highlight" states="draft" type="object"/>
                    <button name="action_done" type="object" string="Réalisée" class="oe_highlight"
                            attrs="{'invisible': [('state','!=', 'confirm')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,chg_period,cancel,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="employee_id"/>
                        <field name="session_id"/>
                        <field name="type_stage_id"/>
                    </group>
                    <group>
                        <field name="dernier_stage"/>
                        <field name="date_depart"/>
                        <field name="date_retour"/>
                        <field name="duree"/>
                        <field name="cause_chg_period"/>
                    </group>
                     <group>
                        <field name="objectifs_stage"/>
                        <field name="methodologie"/>
                        <field name="impacts_attendus"/>
                        <field name="engagement"/>
                    </group>
                     <group>
                        <field name="doc_depart_ids"/>
                        <field name="doc_retour_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--action of the candidature_perfectionnement menu-->
    <record id="action_candidature_perfectionnement" model="ir.actions.act_window">
        <field name="name">Stages Perfectionnement - تربص تحسين المستوى بالخارج</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stages.candidature.perfectionnement</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Créez votre premier stage de perfectionnement !
          </p>
        </field>
    </record>

    <!--action of the candidature_perfectionnement menu-->
    <record id="action_candidature_manifestation" model="ir.actions.act_window">
        <field name="name">Manifestation Scientifique - تظاهرة علمية بالخارج</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stages.candidature.manifestation</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Créez votre premiere manifestation scientifique !
          </p>
        </field>
    </record>

        <record id="action_candidature_sejour" model="ir.actions.act_window">
        <field name="name">Séjour scientifique de haut niveau - إقامة علمية رفيعة المستوى بالخارج</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stages.candidature.sejour</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Créez votre premier sejour scientifique !
          </p>
        </field>
    </record>

   <!--creating sub_menus for candidature  -->

    <menuitem id="stages_cadidature"
        name="Candidatures"
        parent="stages_root"
        sequence="10"/>
    <menuitem id="menu_stages_cadidature_perfectionnement"
        action="action_candidature_perfectionnement"
        name="Stages Perfectionnement" parent="stages_cadidature"
        sequence="1"/>
    <menuitem id="menu_stages_cadidature_manifestation"
        name="Manifestation Scientifique" parent="stages_cadidature"
        action="action_candidature_manifestation"
        sequence="2"/>
    <menuitem id="menu_stages_cadidature_sejour"
        name="Séjour scientifique de haut niveau" parent="stages_cadidature"
        action="action_candidature_sejour"
        sequence="3"/>
</odoo>