    <record id="stages_enseignant_view_form" model="ir.ui.view">
        <field name="name">stages.enseignant.view.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <xpath expr="//form//sheet//notebook//page[2]" position="after">
                <xpath expr="//form//sheet//notebook//page[1]" position="move"/>
            </xpath>
            <xpath expr="//form//sheet//notebook//page[1]" position="inside">
                <group>
                    <group string="Identification">
                        <field name="num_pers"/>
                        <field name="civilite"/>
                        <field name="nom_prenom_ar"/>
                    </group>
                    <group string="Position Scientifique ">
                        <field name="date_recru"/>
                        <field name="grade_id"/>
                        <field name="lab_id"/>
                    </group>
                </group>

            </xpath>
        </field>
    </record>
<!--    action of the enseignants menu-->
    <record id="action_enseignant" model="ir.actions.act_window">
        <field name="name">Enseignants</field>
        <field name="Type">ir.actions.act_window</field>
        <field name="res_model">hr.employee</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©ez votre premier enseignant !
            </p>
        </field>
    </record>
    <!--creating enseignants sub_menu -->
    <menuitem id="stages_enseignant" name="Enseignants" parent="stages_root" action="action_enseignant" sequence="12"/>
