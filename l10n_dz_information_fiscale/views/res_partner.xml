<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_property_form_info_fiscale_l10n_dz" model="ir.ui.view">
        <field name="name">res.partner.property.form.info.fiscale.l10n.dz</field>
        <field name="model">res.partner</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='banks']" position="before">
                <group string="Information fiscale" name="information_fiscale" attrs="{'invisible':[('company_type','not in','company')]}">
                    <field name="rc"/>
                    <field name="nis"/>
                    <field name="nif"/>
                    <field name="ai"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_partner_form_info_fiscale" model="ir.ui.view">
        <field name="name">res.partner.form.info.fiscale</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">True</attribute> <!-- replacÃ© par le champ nif -->
            </xpath>
        </field>
    </record>
</odoo>